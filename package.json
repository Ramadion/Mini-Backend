{
  "name": "mini-backend",
  "version": "1.0.0",
  "description": "Practica con NODE y TS.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate src/migrations/InitMigration -d src/config/data-source.ts",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run -d src/config/data-source.ts",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert -d src/config/data-source.ts",
    "db:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop -d src/config/data-source.ts",
    "db:reset": "npm run db:drop && npm run migration:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ramadion/Mini-Backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ramadion/Mini-Backend/issues"
  },
  "homepage": "https://github.com/Ramadion/Mini-Backend#readme",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
